{% extends 'base.html.twig' %}

{% block title %}Liste des animes{% endblock %}
{% block metaDescription %}
<meta name="description" content="Des dizaines d'animes VOSTFR en DDL à découvrir - nouveautés et séries les plus prisées." />{%
endblock %}

{% block body_id 'blog_index' %}

{% block main %}
<div class="test-main">

    <div class="container-fluid p-l-r-0">
        <div class="container-banniere">
            <img class="w-100" src="{{ asset('css/images/listedesanimes-banner-custom.jpg') | imagine_filter('thumb3') }}"
                alt="Catalogue img">
        </div>

    </div>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                <h1 class="breadcrumb-title">Liste des animes</h1>
            </li>
        </ol>
    </nav>
    <div class="container-fluid">
        <div class="row">
            <div class="page-listing d-flex flex-row flex-wrap">
                {% for anime in animes %}
                <div class="container-thumbnail-catalogue ml-3">
                    <a href="{{ path('anime_show', {'id': anime.id}) }}">{% if anime.filename %}
                        <img src="{{vich_uploader_asset(anime, 'imageFile') | imagine_filter('thumb2') }}">
                        {% else %}
                        <img src="{{ asset('css/images/anime-thumb.jpg') | imagine_filter('thumb2')}}">
                        {% endif %}</a>
                    <div class="title-catalogue">
                        <h2>{{anime.title}}</h2>

                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

</div>
{% endblock %}