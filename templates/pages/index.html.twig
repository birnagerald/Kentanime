{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body_id 'blog_index' %}

{% block main %}
    <div class="test-main">
        
        <div class="container-fluid p-l-r-0">
            <div class="container-banniere">
                <img class="w-100" src="{{ asset('css/images/page-banner.jpg') }}" alt="Catalogue img">
            </div>

        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="page-listing d-flex flex-row flex-wrap">
                    {% for page in pages %}
                        <div class="container-thumbnail-catalogue ml-3"><figure><a href="{{ path('page_show', {'id': page.id}) }}"><img src="{{page.image}}" alt=""></img></a><figcaption><h2>{{page.title}}</h2><br><p class="post-metadata">Cat√©gorie : <span class="metadata-categories">{{page.category.title}}</span></p></figcaption></figure></div>
                    {% endfor %}
                </div>
            </div>
        </div>
        
    </div>
{% endblock %}