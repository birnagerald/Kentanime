{{ form_start(form) }}
<div class="row">
    <div class="col md-2">
        {{ form_row(form.username) }}</div>
    <div class="col md-2">{{ form_row(form.imageFile) }}</div>
</div>
{% if form.roles is defined %}
<div class="col md-4">
    {{ form_row(form.roles)}}</div>
{% endif %}
<button class="btn btn-primary float-right mb-5">
    {{ button |default('Enregistrer') }}</button>
{{ form_end(form) }}