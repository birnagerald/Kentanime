{% extends 'baseAdmin.html.twig' %}

{% block title %}Category{% endblock %}
{% block body_id 'blog_index' %}

{% block main %}


<div class="container mt-4">
    <h1>Category</h1>

    <table class="table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_category_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-secondary">edit</a>

    {# {{ include('admin/category/_delete_form.html.twig') }} #}

</div>
{% endblock %}
