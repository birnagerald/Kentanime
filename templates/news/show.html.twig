{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body_id 'blog_index' %}
{% block main %}
{% if post.category == 'natus' %}
    
        <div class="test-main">
            
                <div class="container container-article">
                    <div class="d-flex flex-column">
                        <div class="mx-auto">
                            <div class="container-thumbnail-show mb-5">
                                <img src="{{ post.image }}">
                            </div>
                        </div>
                        <article class="post d-flex flex-column">
                            <h1 class="mx-auto title-show">
                                <a href="#">
                                {{ post.title }}
                                </a>
                            </h1>

                            <p class="mx-auto">{{ post.content| nl2br }}</p>

                            <p class="post-metadata ml-auto">
                                <span class="metadata-author">{{ post.author }}</span><span class="metadata">-</span><span class="metadata-date">{{ post.createdAt | date('d/m/y') }}</span> cat√©gorie : <span class="metadata-categories"> {{ post.category }}</span>
                                
                            </p>

                        </article>
                    </div>
                </div>
            
        </div>
    
{% else %}
   
        <div class="test-main">
            
                <div class="container container-article">
                    <div class="d-flex flex-column">
                        <p>TEST</p>
                    </div>
                </div>
            
        </div>
    
{% endif %}
{% endblock %}
